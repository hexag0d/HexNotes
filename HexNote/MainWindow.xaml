<Window x:Class="HexNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexNote"
        mc:Ignorable="d"
        Title="Notes" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="359*"/>
            <ColumnDefinition Width="312*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="notesTextBox" Margin="10,24,10.4,10.2" TextWrapping="Wrap" Grid.ColumnSpan="3"/>
        <CheckBox x:Name="topCheckBox" Content="Top" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Click="TopCheckBox_Click" Width="40"/>
        <Slider x:Name="opacitySlider" Grid.ColumnSpan="3" Height="17" Margin="55,7,10.4,0" VerticalAlignment="Top" ValueChanged="OpacitySlider_ValueChanged"/>

    </Grid>
</Window>
